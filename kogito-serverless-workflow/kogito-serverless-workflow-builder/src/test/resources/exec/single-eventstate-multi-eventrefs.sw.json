{
  "id": "function",
  "name": "test-wf",
  "version": "1.0",
  "expressionLang": "jsonpath",
  "start": "WaitForGreeting",
  "events": [
    {
      "name": "TestKafkaEvent",
      "source": "testtopic",
      "type": "kafka"
    },
    {
      "name": "TestKafkaEvent2",
      "source": "testtopic2",
      "type": "kafka"
    }
  ],
  "functions": [
     {
      "name": "greetFunction",
      "type": "custom",
      "operation": "script"
    }
  ],
  "states": [
    {
      "name": "WaitForGreeting",
      "type": "event",
      "onEvents": [
        {
          "eventRefs": [
            "TestKafkaEvent",
            "TestKafkaEvent2"
          ],
          "eventDataFilter": {
            "toStateData": "{{ $.data.greet }}"
          },
          "actions": [
            {
              "functionRef": {
                "refName": "greetFunction",
                "arguments": {
                  "script": "System.out.println(\"Hello:\" + ((com.fasterxml.jackson.databind.JsonNode)kcontext.getVariable(\"testtopicVar\")).get(\"firstName\"));"
                }
              }
            }
          ]
        }
      ],
      "end": {
        "terminate": "true"
      }
    }
  ]
}