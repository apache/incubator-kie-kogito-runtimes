<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.kie.kogito</groupId>
        <artifactId>drools</artifactId>
        <version>2.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>kogito-scenario-simulation</artifactId>

    <name>Kogito :: Drools :: Kogito Scenario Simulation Runner</name>
    <description>Kogito wrapper Scenario Simulation Runner</description>
    
    <properties>
      <java.module.name>org.kie.kogito.kogito.scenario.simulation</java.module.name>
    </properties>

    <dependencies>

        <dependency>
            <groupId>org.kie.kogito</groupId>
            <artifactId>kogito-dmn</artifactId>
        </dependency>
        <dependency>
            <groupId>org.kie.kogito</groupId>
            <artifactId>kogito-pmml</artifactId>
        </dependency>

        <!-- The runner compiles and executes the model on the fly so it requires dynamic loading  -->
        <dependency>
            <groupId>org.kie.kogito</groupId>
            <artifactId>kogito-drools</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>org.kie.kogito</groupId>
                    <artifactId>drools-core-static</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.kie.kogito</groupId>
            <artifactId>drools-core-dynamic</artifactId>
        </dependency>

        <dependency>
            <groupId>org.junit.vintage</groupId>
            <artifactId>junit-vintage-engine</artifactId>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>org.drools</groupId>
            <artifactId>drools-scenario-simulation-api</artifactId>
            <version>${version.org.kie7}</version>
            <exclusions>
                <exclusion>
                    <groupId>org.kie.soup</groupId>
                    <artifactId>kie-soup-project-datamodel-api</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>org.drools</groupId>
            <artifactId>drools-scenario-simulation-backend</artifactId>
            <version>${version.org.kie7}</version>
            <exclusions>

                <exclusion>
                    <groupId>junit</groupId>
                    <artifactId>junit</artifactId>
                </exclusion>

                <!-- JSON/XML utils -->
                <exclusion>
                    <groupId>com.fasterxml.jackson.core</groupId>
                    <artifactId>jackson-databind</artifactId>
                </exclusion>

                <!-- KIE soup -->
                <exclusion>
                    <groupId>org.kie.soup</groupId>
                    <artifactId>kie-soup-commons</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.kie.soup</groupId>
                    <artifactId>kie-soup-project-datamodel-api</artifactId>
                </exclusion>

                <!-- MVEL support -->
                <exclusion>
                    <groupId>org.drools</groupId>
                    <artifactId>drools-core</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.mvel</groupId>
                    <artifactId>mvel2</artifactId>
                </exclusion>

                <!-- DMN dependencies -->
                <exclusion>
                    <groupId>org.kie</groupId>
                    <artifactId>kie-dmn-feel</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.kie</groupId>
                    <artifactId>kie-dmn-api</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.kie</groupId>
                    <artifactId>kie-dmn-core</artifactId>
                </exclusion>

            </exclusions>
        </dependency>
    </dependencies>
</project>