<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>db-scripts</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.root.dir}/addons/persistence/postgresql-persistence-addon/src/main/resources/sql</directory>
            <outputDirectory>postgresql</outputDirectory>
            <includes>
                <include>*.sql</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.root.dir}/addons/persistence/jdbc-persistence-addon/src/main/resources/sql</directory>
            <outputDirectory>jdbc</outputDirectory>
            <includes>
                <include>*.sql</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>