{
  "type": "object",
  "javaType": "org.jbpm.serverless.workflow.api.events.Consume",
  "description": "Actions to be performed on Events arrival",
  "properties": {
    "eventName": {
      "type": "string",
      "description": "Name of the defined event that will trigger actions"
    },
    "timeout": {
      "type": "string",
      "description": "Specifies the time period waiting for the events in the EVENTS-EXPRESSION (ISO 8601 format)"
    },
    "actionMode": {
      "type": "string",
      "enum": [
        "SEQUENTIAL",
        "PARALLEL"
      ],
      "description": "Specifies whether functions are executed in sequence or in parallel"
    },
    "actions": {
      "type": "array",
      "description": "Action Definitions",
      "items": {
        "type": "object",
        "$ref": "../actions/action.json"
      }
    },
    "transition": {
      "$ref": "../transitions/transition.json"
    },
    "filter": {
      "$ref": "../filters/filter.json"
    },
    "metadata": {
      "$ref": "../metadata/metadata.json"
    }
  },
  "required": [
    "event-expression",
    "actions",
    "transition"
  ]
}