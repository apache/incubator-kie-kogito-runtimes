{
  "id": "headersKnativeFunction",
  "version": "1.0",
  "name": "Test Knative function",
  "description": "This workflow tests a Knative function",
  "start": "invokeFunction",
  "functions": [
    {
      "name": "greet",
      "type": "custom",
      "operation": "knative:services.v1.serving.knative.dev/default/serverless-workflow-greeting-quarkus?path=/headersFunction&method=POST"
    }
  ],
  "states": [
    {
      "name": "invokeFunction",
      "type": "operation",
      "actions": [
        {
          "functionRef": {
            "refName": "greet",
            "arguments": {
              "HEADER_Test": "test",
              "HEADER_Authorization": "Bearer token"
            }
          }
        }
      ],
      "end": true
    }
  ]
}
  