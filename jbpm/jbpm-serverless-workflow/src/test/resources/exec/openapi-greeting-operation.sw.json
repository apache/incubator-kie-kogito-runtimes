{
  "id": "greeting",
  "version": "1.0",
  "name": "Greeting Workflow",
  "description": "Greet Someone",
  "functions": [
    {
      "name": "greetingFunction",
      "operation": "file://myapis/greetingapis.json#greeting"
    }
  ],
  "states": [
    {
      "name": "Greet",
      "type": "operation",
      "start": true,
      "actions": [
        {
          "functionRef": {
            "refName": "greetingFunction",
            "parameters": {
              "name": "{{ $.person.name }}"
            }
          },
          "actionDataFilter": {
            "dataResultsPath": "{{ $.greeting }}"
          }
        }
      ],
      "end": true
    }
  ]
}