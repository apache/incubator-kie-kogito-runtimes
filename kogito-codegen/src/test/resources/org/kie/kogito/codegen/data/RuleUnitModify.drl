package org.kie.kogito.codegen.data;
unit AdultUnitModify;

import org.kie.kogito.codegen.data.Person
import org.kie.kogito.codegen.data.Results

rule MakeAdult when
    $p: /persons[ age < 18 ]
then
    modify($p) { $p.setAge(22) };
end

rule IsAdult when
    $p: /persons[ age >= 18, $name : name ]
then
    results.add($name);
end

