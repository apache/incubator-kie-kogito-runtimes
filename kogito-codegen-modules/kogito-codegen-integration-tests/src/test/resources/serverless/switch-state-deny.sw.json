{
  "id": "switchworkflow",
  "name": "switch-wf",
  "version": "1.0",
  "start": "AddInfo",
  "states":[
    {
      "name":"AddInfo",
      "type":"inject",
      "data": {
        "people": [
          {
            "name": "john",
            "age": 15
          }
        ]
      },
      "transition": "ChooseOnAge"
    },
    {
      "name": "ChooseOnAge",
      "type": "switch",
      "dataConditions": [
        {
          "condition": "{{ $.people[?(@.age  >= 18)] }}",
          "transition": "Approve"
        },
        {
          "condition": "{{ $.people[?(@.age  < 18)] }}",
          "transition": "Deny"
        }
      ],
      "default": {
        "transition": "Approve"
      }
    },
    {
      "name":"Approve",
      "type":"inject",
      "data": {
        "decision": "Approved"
      },
      "end": true
    },
    {
      "name":"Deny",
      "type":"inject",
      "data": {
        "decision": "Denied"
      },
      "end": true
    }
  ]
}