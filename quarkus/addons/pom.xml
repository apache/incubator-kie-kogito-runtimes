<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>quarkus</artifactId>
    <groupId>org.kie.kogito</groupId>
    <version>1.11.2-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>kogito-addons-quarkus-parent</artifactId>
  <name>Kogito :: Add-Ons :: Quarkus</name>
  <description>Parent Module for Kogito Quarkus Addons</description>
  <packaging>pom</packaging>

  <modules>
    <module>events</module>
    <module>messaging</module>
    <module>monitoring</module>
  </modules>

  <profiles>
    <profile>
      <id>default</id>
      <activation>
        <property>
          <name>!productized</name>
        </property>
      </activation>
      <modules>
        <module>explainability</module>
        <module>jobs</module>
        <module>knative</module>
        <module>mail</module>
        <module>persistence</module>
        <module>task-notification</module>
        <module>tracing-decision</module>
      </modules>
    </profile>
    <profile>
      <id>integration-test-modules</id>
      <activation>
        <property>
          <name>!excludeITModules</name>
        </property>
      </activation>
      <modules>
        <module>process-svg</module>
        <module>rest-exception-handler</module>
        <module>process-management</module>
        <module>task-management</module>
      </modules>
    </profile>
  </profiles>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.kie.kogito</groupId>
        <artifactId>kogito-quarkus-bom</artifactId>
        <version>${project.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>
</project>